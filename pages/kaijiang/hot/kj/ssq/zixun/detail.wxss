/* pages/zixun/detail.wxss */
@import "../common.wxss";
@import "/wxParse/wxParse.wxss";

view {overflow:hidden;overflow-x:auto;border:0}

.detail-title{padding:0 15px 10px;margin-top:39px}
article .detail-title{background:#d93f3f}
.detail-title .author{color:#fda8a8;font-size:11px;padding-top:4px}
.detail-title .author .wxParse-span{margin-right:10px}
.detail-bg{background:#f6f6f6}
.prl15{padding-left:15px;padding-right:15px}
.detail-content{padding:15px 0 45px;line-height:29px;font-size:16px;word-break:break-all;word-wrap:break-word}
.detail-content .wxParse-p{padding-bottom:15px}
.detail-content .plugin-box .wxParse-p{padding-bottom:0}
.detail-content image{max-width:100%;height:auto;display:inline-block}
a.tc.pb10{color:#999;display:block}
.detail-sub-t{font-size:14px;color:#222;position:relative;height:37px;line-height:37px}
.detail-sub-t .review-aa{position:absolute;top:-10px}
.detail-sub-t:before{content:"";width:6px;height:17px;background:#ec2248;display:block;position:absolute;top:9px;left:-15px}

/* CSS Document */
.nbatemp-box .wxParse-p{ font-size:14px; padding-bottom:30px; line-height:22px; margin:0;}
.nbatemp-box .wxParse-p.nbapb15{ padding-bottom:10px;}
.nbatemp-box .nbabili{ width:100%; position:relative; height:28px; background:#999; line-height:28px; color:#FFF; margin-bottom:20px;}
.nbatemp-box .nbabili .nbaleft-name{float:left;background:#ff5a00; height:28px;}
.nbatemp-box .nbabili .nbaleft-name  .wxParse-span{ height:28px; position:absolute; left:10px; width:50%;}
.nbatemp-box .nbabili .nbaright-name{ float:right;}
.nbatemp-box .nbabili .nbaright-name  .wxParse-span{ height:28px; position:absolute; right:10px; width:50%; text-align:right;}

.wxParse-tr,.wxParse-td {border:0}